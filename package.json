{
  "name": "neno",
  "version": "7.7.0",
  "description": "NENO is a note-taking app that helps you manage your personal knowledge garden.",
  "type": "module",
  "dependencies": {
    "@lexical/link": "^0.13.1",
    "@lexical/react": "^0.13.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lexical": "^0.13.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "vite-plugin-pwa": "^0.18.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@tippyjs/react": "^4.2.6",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.5",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "idb-keyval": "^6.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "tippy.js": "^6.3.7",
    "typescript": "^5.2.2",
    "vite": "^5.1.1",
    "vite-plugin-top-level-await": "^1.4.0"
  },
  "scripts": {
    "stylelint": "npx stylelint \"**/0*.css\"",
    "test-intl": "node --test src/intl/test.node-test.mjs",
    "compile": "npx tsc",
    "unit-test": "npx jest",
    "integration-test": "npx playwright test tests/integration/*.spec.ts",
    "visual-regression-test": "npx playwright test tests/visual-regression/*.spec.ts",
    "update-snapshots": "npx playwright test tests/visual-regression/*.spec.ts --update-snapshots",
    "test": "npm run unit-test && npm run test-intl",
    "subwaytext-example": "npm run compile && node dist/lib/subwaytext/examples/example.js",
    "subwaytext-performance-test": "npm run compile && node dist/lib/subwaytext/examples/performance-test.js",
    "dev": "npx vite",
    "build": "npx tsc && npx vite build",
    "lint": "npx eslint src --ext ts,tsx --report-unused-disable-directives",
    "all-checks": "npm run stylelint && npm run lint && npm run test && npm run integration-test && npm run build",
    "lint-fix": "npx eslint src --ext ts,tsx --report-unused-disable-directives --fix"
  },
  "author": "Sebastian Zimmer",
  "license": "Apache License 2.0"
}
